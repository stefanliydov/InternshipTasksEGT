package com.egtinteractive.data_structures.list;

import java.util.Iterator;

public class ArrayList<T> implements List<T> {

    private T[] arr;
    private int size;

    @SuppressWarnings("unchecked")
    public ArrayList() {
	this.arr = (T[]) new Object[2];
	this.size = 0;
    }

    public T get(int index) {
	if (this.isOutOfBounds(index)) {
	    throw new IndexOutOfBoundsException();
	}
	return this.arr[index];

    }

    public void add(T element) {
	if (size == this.arr.length) {
	    this.increasesize();
	}
	this.arr[size++] = element;
    }

    public void add(int index, T element) {
	if (index < 0 || index > size) {
	    throw new IndexOutOfBoundsException();
	}
	if (size == this.arr.length) {
	    this.increasesize();
	}

	for (int i = size; i > index; i--) {
	    this.arr[i] = this.arr[i - 1];
	}
	this.arr[index] = element;
	size++;
    }

    public void set(int index, T element) {
	if (this.isOutOfBounds(index)) {
	    throw new IndexOutOfBoundsException();
	}
	this.arr[index] = element;

    }

    public boolean remove(T element) {

	for (int i = 0; i < size; i++) {
	    if (arr[i].equals(element)) {

		if (i != --size)
		    for (int j = i; j < size; j++) {
			arr[j] = arr[j + 1];
		    }
		arr[size] = null;
		if (size <= arr.length / 2) {
		    this.reduceSize();
		}
		return true;
	    }
	}
	return false;
    }

    public boolean remove(int index) {
	if (this.isOutOfBounds(index)) {
	    throw new IndexOutOfBoundsException();
	}

	if (index != --size)
	    for (int i = index; i < size; i++) {
		arr[i] = arr[i + 1];
	    }
	arr[size] = null;
	if (size <= arr.length / 2) {
	    this.reduceSize();
	}
	return true;
    }

    public boolean contains(Object O) {
	for (int i = 0; i < size; i++) {
	    if (this.arr[i].equals(O)) {
		return true;
	    }
	}
	return false;
    }

    public int indexOf(T element) {
	for (int i = 0; i < size; i++) {
	    if (element.equals(this.arr[i])) {
		return i;
	    }
	}
	return -1;
    }

    public int size() {
	return this.size;
    }

    @SuppressWarnings("unchecked")
    public void clear() {
	this.arr = (T[]) new Object[this.arr.length];
	this.size = 0;

    }

    public Iterator<T> iterator() {
	return new CustomIterator(this);
    }

    @SuppressWarnings("unchecked")
    private void increasesize() {
	final T[] newArr = (T[]) new Object[this.size * 2];

	for (int i = 0; i < this.arr.length; i++) {
	    newArr[i] = this.arr[i];
	}
	this.arr = newArr;
    }

    @SuppressWarnings("unchecked")
    private void reduceSize() {
	if (this.size < 2) {
	    return;
	}
	final T[] newArr = (T[]) new Object[this.arr.length / 2];

	for (int i = 0; i < size; i++) {
	    newArr[i] = arr[i];
	}
	this.arr = newArr;
    }

    private boolean isOutOfBounds(int index) {
	return (index < 0 || index >= size);
    }

    private class CustomIterator implements Iterator<T> {

	private int i = -1;
	private ArrayList<T> list;

	public CustomIterator(ArrayList<T> list) {
	    this.list = list;
	}

	@Override
	public boolean hasNext() {
	    return i < size - 1;
	}

	@Override
	public T next() {
	    return arr[++i];

	}

	@Override
	public void remove() {
	    list.remove(i);
	}

    }
}
