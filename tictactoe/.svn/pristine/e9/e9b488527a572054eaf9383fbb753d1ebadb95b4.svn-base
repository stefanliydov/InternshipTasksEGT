DROP DATABASE IF EXISTS tic_tac_toe ;

CREATE DATABASE tic_tac_toe;
USE tic_tac_toe;

CREATE TABLE players( id INT(11) UNSIGNED AUTO_INCREMENT PRIMARY KEY, name VARCHAR(30) UNIQUE NOT NULL );

CREATE TABLE games( id INT(11) UNSIGNED AUTO_INCREMENT PRIMARY KEY, player_id INT(11) UNSIGNED , date_time DATETIME NOT NULL, outcome ENUM('PLAYER_WINS','AI_WINS', 'DRAW') NOT NULL, FOREIGN KEY (player_id) REFERENCES players(id) );
